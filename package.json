{
  "name": "zakker",
  "displayName": "Zakker",
  "description": "Azkar For Visual Studio Code",
  "publisher": "hadywalied",
  "version": "0.1.2",
  "icon": "./media/icon.png",
  "repository": {
    "url": "https://github.com/hadywalied/Zakker-vscode"
  },
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zakker.show",
        "title": "Show Azkar",
        "category": "Zakker"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azkar-sidebar",
          "title": "Zakker",
          "icon": "media/zaker_icon.svg",
          "location": "right"
        }
      ]
    },
    "views": {
      "azkar-sidebar": [
        {
          "id": "azkar-view",
          "name": "Zakker",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zakker.show",
          "when": "view == azkar-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "node build.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run clean && yarn run check-types && yarn run lint && yarn run compile",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf dist out *.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vercel/ncc": "^0.38.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.15.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "sqlite3": "^5.1.7"
  }
}
